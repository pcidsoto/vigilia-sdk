<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Dashboard de Monitoreo</title>
  <link rel="stylesheet" href="/monitoring-dashboard/assets/dashboard.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div id="app">
    <section class="dashboard-header" id="dashboard-root">
      <h2>Monitoreo de Tráfico</h2>
      <div class="filtros">
        <label for="rango-tiempo">Rango de tiempo:</label>
        <select id="rango-tiempo">
          <option value="5m">Ultimos 5 minutos</option>
          <option value="10m">Ultimos 10 minutos</option>
          <option value="15m">Ultimos 15 minutos</option>
          <option value="30m">Ultimos 30 minutos</option>
          <option value="1h">Ultima 1 hora</option>
          <option value="4h">Ultimas 4 horas</option>
        </select>
        <label for="refresh-interval" class="ms-3">Refresh:</label>
        <select id="refresh-interval" class="form-select form-select-sm w-auto d-inline-block">
          <option value="2000">2s</option>
          <option value="5000" selected>5s</option>
          <option value="10000">10s</option>
          <option value="30000">30s</option>
          <option value="60000">1min</option>
        </select>
      </div>
    </section>

    <div class="container-fluid">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Tráfico por minuto <span id="texto-rango" class="text-secondary" style="font-weight: normal; font-size: 1em;"></span></h4>
              <canvas id="chart-trafico"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body" >
              <h4 class="card-title">Distribución: tráfico vs amenazas </h4>
              <canvas id="chart-clasificacion"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Top IPs con tráfico malicioso</h4>
              <canvas id="chart-top-ips"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Eventos recientes</h4>
              <div class="table-responsive flex-grow-1" style="overflow-y: auto; max-height: 370px;">
                <table id="tabla-eventos" class="table table-sm table-striped table-hover align-middle mb-0">
                  <thead>
                    <tr>
                      <th>IP</th>
                      <th>Endpoint</th>
                      <th>Método</th>
                      <th>Clasificación</th>
                      <th>Fecha</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="module" src="/monitoring-dashboard/assets/dashboard.js"></script>
</body>
</html>